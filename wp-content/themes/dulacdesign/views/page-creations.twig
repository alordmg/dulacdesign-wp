{% extends "base.twig" %}

{% block content %}

  <div id="hero" style="background-image: url('{{TimberImage(post.get_field('img_entete')).src|resize(1920)}}');">

    <div id="titre-de-page">
      <h1>{{ post.title }}</h1>
    </div>

  </div>

  <div class="container-ambiances">

    <ul>

      {% for cat in categories %}
      <li><a href="{{cat.link}}">{{cat.name}}</a></li>
      {% endfor %}

    </ul>

  </div>

  <div class="container-creations">

  {% for post in posts %}

    <div class="creation" style="background-image: url('{{TimberImage(post.get_field('img_entete')).src|resize(800)}}');">
      <a href="{{post.link}}">
        <div class="creation-infos centre-absolu">
          <h2>{{post.title}}</h2>
          <p>{{post.post_date|date}}</p>
        </div>
      </a>
    </div>

  {% endfor %}

  </div>


{% endblock %}
