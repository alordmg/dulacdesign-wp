{% extends "base.twig" %}

{% block content %}

  <div id="hero" style="background-image: url('{{TimberImage(post.get_field('img_entete')).src}}');">

    <div id="titre-de-page">
      <h1>{{ post.title }}</h1>
    </div>

  </div>

  <div class="texte">

    <div class="texte-centre">

      <p>{{post.get_field('introduction')}}</p>

    </div>

  </div>

  <div class="contact texte">

    <div class="texte-centre">

      <h2>Contactez-nous</h2>

      <p>{{post.get_field('ctct_desc')}}</p>

    </div>

  </div>

{% endblock %}
