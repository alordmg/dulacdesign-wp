{% extends "base.twig" %}

{% block content %}

  <div id="hero" style="background-image: url('{{TimberImage(post.get_field('img_entete')).src|resize(1920)}}');">

    <div id="titre-page" class="btn centre-absolu">

      <a class="scroll-to" href="#intro">Découvrir</a>

    </div>

  </div>

  <div id="intro" class="texte">

    <div class="texte-centre">

      <p>{{post.get_field('introduction')}}</p>

    </div>

    <div class="btn">
      <a href="{{post.get_field('btn_esp')}}">En savoir plus</a>
    </div>

  </div>

  <div class="projet-container row-reverse">

    <div class="projet-img">
      <img src="{{TimberImage(post.get_field('prj1_photo')).src|resize(1200)}}"></img>
    </div>

    <div class="projet-txt texte">

      <h2>{{post.get_field('prj1_titre')}}</h2>
      <p>{{post.get_field('prj1_desc')}}</p>

      <img class="img-desktop" src="{{TimberImage(post.get_field('prj1_photo')).src}}"></img>

    </div>

  </div>


  <div class="projet-container">

    <div class="projet-img">
      <img src="{{TimberImage(post.get_field('prj2_photo')).src|resize(1200)}}"></img>
    </div>

    <div class="projet-txt texte">

      <h2>{{post.get_field('prj2_titre')}}</h2>
      <p>{{post.get_field('prj2_desc')}}</p>

      <img class="img-desktop" src="{{TimberImage(post.get_field('prj2_photo')).src}}"></img>

    </div>

  </div>

  <div class="projet-container row-reverse">

    <div class="projet-img">
      <img src="{{TimberImage(post.get_field('prj3_photo')).src|resize(1200)}}"></img>
    </div>

    <div class="projet-txt texte">

      <h2>{{post.get_field('prj3_titre')}}</h2>
      <p>{{post.get_field('prj3_desc')}}</p>

    </div>

  </div>

  <div class="texte citation">

    <div class="texte-centre">

      <p>{{post.get_field('citation')}}</p>

    </div>

  </div>


  <div class="cta" style="background-image: url('{{TimberImage(post.get_field('cta_bg')).src|resize(1920)}}')">

    <div class="cta-lien centre-absolu">
      <a href="{{post.get_field('cta_lien')}}">Voir toutes nos créations</a>
    </div>

  </div>

  <div class="contact texte">

    <div class="texte-centre">

      <h2>Contactez-nous</h2>

      <p>{{post.get_field('ctct_desc')}}</p>

    </div>

  </div>

{% endblock %}
