{% extends "base.twig" %}

{% block content %}

  <div id="hero" style="background-image: url('{{TimberImage(post.get_field('img_entete')).src|resize(1920)}}');">

    <div id="titre-de-page">
      <h1>{{ post.title }}</h1>
    </div>

  </div>

  <div class="texte">

    <div class="texte-centre">

      <p>{{post.get_field('texte_descriptif')}}</p>

    </div>

  </div>

  <div class="container-photos">

    {% for image in post.get_field('photos') %}
    <div class="photo">
      <a class="chocolat-image" href="{{ TimberImage(image) }}"><img src="{{ TimberImage(image).src|resize(400) }}" alt="{{ TimberImage(image).caption }}"></a>
    </div>
    {% endfor %}

  </div>

{% endblock %}
